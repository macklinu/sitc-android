<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

    <fragment
        android:id="@+id/carpoolSiteMap"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <fragment
        android:id="@+id/carpoolSiteDetails"
        android:name="nu.mackli.sitc.fragments.CarpoolSiteDetailsFragment_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/carpoolSiteMap"/>

    <Button
        android:id="@+id/directions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignBottom="@id/carpoolSiteMap"
        android:background="@android:color/holo_orange_light"
        android:textColor="@android:color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:text="Directions"/>

</RelativeLayout>