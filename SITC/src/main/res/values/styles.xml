<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="android:actionBarTabStyle">@style/AppTheme.ActionBar.TabView</item>
    </style>

    <style name="AppTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@android:color/holo_orange_light</item>
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.Title</item>
        <item name="android:actionBarItemBackground">@android:color/holo_blue_light</item>
        <item name="android:backgroundSplit">@android:color/holo_green_light</item>
    </style>

    <style name="AppTheme.ActionBar.Title"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.ActionBar.TabView" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@android:color/holo_orange_light</item>
        <item name="android:tabWidgetStyle">@android:color/white</item>
    </style>

    <style name="AppTheme.EditText" parent="android:Widget.Holo.Light.EditText">
        <item name="android:layout_marginLeft">@dimen/sideMargin</item>
        <item name="android:layout_marginRight">@dimen/sideMargin</item>
        <item name="android:padding">@dimen/editTextPadding</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="AppTheme.Button" parent="android:Widget.Holo.Light.Button">
        <item name="android:layout_marginLeft">@dimen/sideMargin</item>
        <item name="android:layout_marginRight">@dimen/sideMargin</item>
        <item name="android:padding">@dimen/editTextPadding</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/holo_green_dark</item>
    </style>

</resources>
